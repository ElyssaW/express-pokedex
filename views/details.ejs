<h1>Deets</h1>

<img alt='sprite' src='<%= pokeInfo.data.sprites.front_default %>'>
<img alt='sprite' src='<%= pokeInfo.data.sprites.front_shiny %>'>

<ul>
    <li>
        <% pokeInfo.data.types.forEach(element => { %>
            <ul>
                <li>
                    <a href='<%= element.type.url %>'><%= element.type.name %></a>
                </li>
            </ul>
      <%  }) %>
    </li>

    <li>
        <% pokeInfo.data.abilities.forEach(element => { %>
            <ul>
                <li>
                    <a href='<%= element.ability.url %>'><%= element.ability.name %></a>
                </li>
            </ul>
      <%  }) %>
    </li>
</ul>

<form method="POST" action="/pokemon">
    <input hidden type="text" name="name" value="<%= pokeInfo.data.species.name %>">
    <input hidden type="text" name="imageUrl" value="<%= pokeInfo.data.sprites.front_default %>">
    <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
  </form>